{
    "extends": ["stylelint-config-html"],
    "rules": {
        "no-invalid-position-at-import-rule": null,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "layer",
                    "variants",
                    "responsive",
                    "screen"
                ]
            }
        ]
    }
}
