{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"],
            "@content/*": ["src/content/*"],
            "@scripts/*": ["src/scripts/*"]
        }
    },
    "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.astro"]
}
